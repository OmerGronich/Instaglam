{
	"name": "instaglam",
	"version": "1.0.0",
	"description": "### By [Almog Ram](), [Roi Assa](https://github.com/roiassa), [Omer Gronich](https://github.com/OmerGronich)",
	"main": "index.js",
	"scripts": {
		"mongo": "docker run -p 27017-27019:27017-27019 -v ${PWD}/server/db-data:/data/db -d  mongo",
		"start": "cd client && npm start",
		"dev": "cd server && npm run dev",
		"client:install": "cd client && npm install",
		"server:install": "cd server && npm install",
		"postinstall": "(npm run client:install) && (npm run server:install)",
		"server:format": "cd server && npm run format",
		"client:format": "cd client && npm run format",
		"format": "(npm run server:format) && (npm run client:format)"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/OmerGronich/Instaglam.git"
	},
	"husky": {
		"hooks": {
			"pre-commit": "(cd client && npm run format) && (cd server && npm run format)"
		}
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/OmerGronich/Instaglam/issues"
	},
	"homepage": "https://github.com/OmerGronich/Instaglam#readme",
	"dependencies": {
		"husky": "^4.2.5"
	}
}
